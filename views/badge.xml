<svg xmlns="http://www.w3.org/2000/svg" width="{{totalWidth}}" height="20">
  <g shape-rendering="crispEdges">
    <rect width="{{leftWidth}}" height="20" fill="#1d3649"/>
    <rect x="{{leftWidth}}" width="{{rightWidth}}" height="20" fill="#41d6c3"/>
  </g>
  <g fill="#fff" text-anchor="middle" font-family="'Helvetica Neue',HelveticaNeue,Helvetica,'Segoe UI',Segoe,Calibri,Roboto,'Droid Sans',Meiryo,'Microsoft YaHei',Arial,sans-serif" font-size="11">
    <text x="{{leftX}}" y="14">{{left}}</text>
    <text x="{{rightX}}" y="14" fill="#1d3649">{{right}}</text>
  </g>
</svg>
